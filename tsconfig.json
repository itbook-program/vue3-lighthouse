{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true, //这样可以对`this`上的数据属性进行严格的推断，否则总是被视为any类型
      "jsx": "preserve",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@types": ["src/types/*"]
      },
  },
  "include": [
      "src/**/*",
      "src/shim.d.ts",
      "src/types/*"
    ],
  "exclude": [
      "node_modules"
  ]
}